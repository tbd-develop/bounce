<?xml version="1.0"?>
<configuration>
    <defaults>
        <key name="siteTitle" value="Bounce PHP" />
        <key name="appVersion" value="1.0.0.0" />
        <key name="default_template" value="default" />
        <key name="sessionlength" value="5" />
        <key name="siteprofile" value="devsite" />
        <key name="servicetype" value="json" />
        <key name="scripts-directory" value="/scripts/" />
    </defaults>
    <debug>
        <key name="enabled" value="1" />
    </debug>
    <routes>
        <key name="default_controller" value="install" />
        <key name="default_view" value="index" />
    </routes>
    <directories>
        <key name="base" value="/core" />
        <key name="controllers" value="/controllers" />
        <key name="areas" value="/areas" />
        <key name="views" value="/views" />
        <key name="templates" value="/templates" />
        <key name="userlibs" value="/libraries" />
        <key name="includes" value="/includes" />
        <key name="models" value="/models" />
        <key name="resource" value="/resources" />
        <key name="services" value="/services" />
    </directories>
    <devsite>
        <key name="rootpath" value="/var/www/Demo/bounce" />
        <key name="database" value="dummy" />
        <key name="cookiename" value="bouncedev" />
        <key name="cookiepath" value="/" />
        <key name="cookiedomain" value="." />
    </devsite>

    <dummy>
        <key name="connector" value="DummyConnector" />
        <key name="host" value="localhost" />
        <key name="database" value="db_name" />
        <key name="username" value="db_user" />
        <key name="password" value="db_pass" />
    </dummy>
    <debug>
        <key name="connector" value="MysqliConnector" />
        <key name="host" value="localhost" />
        <key name="database" value="db_name" />
        <key name="username" value="db_user" />
        <key name="password" value="db_pass" />
    </debug>

	<email>
        <!-- configuration values
		<key name="key" value="Value" />
        -->
	</email>
</configuration>
